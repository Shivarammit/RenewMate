<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B0303"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="175dp"
        android:layout_height="46dp"
        android:src="@drawable/logo"
        android:translationY="30sp" />

    <Button
        android:id="@+id/Start"
        android:layout_width="363dp"
        android:layout_height="wrap_content"
        android:width="296sp"
        android:height="44sp"
        android:background="#673AB7"
        android:fontFamily="sans-serif"
        android:paddingLeft="5sp"
        android:paddingTop="5sp"
        android:paddingEnd="5sp"
        android:paddingRight="5sp"
        android:paddingBottom="5sp"
        android:rotation="0"
        android:rotationX="0"
        android:rotationY="0"
        android:shadowColor="#1B1717"
        android:text="Get Started    ->"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:translationX="20sp"
        android:translationY="600sp" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="349dp"
        android:layout_height="348dp"
        android:src="@drawable/image"
        android:translationX="30sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Track Your Subscriptions"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:translationX="30sp"
        android:translationY="30sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="342dp"
        android:layout_height="45dp"
        android:text="Stay in control of your subscriptions, so they don't control you."
        android:textColor="#5B5A5A"
        android:textSize="16sp"
        android:translationX="30sp"
        android:translationY="50sp" />

</LinearLayout>