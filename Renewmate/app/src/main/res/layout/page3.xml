<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical">

    <Button
        android:id="@+id/addDet"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="@drawable/button"
        android:text="Confirm"
        android:textSize="25sp"
        android:translationY="650sp" />

    <EditText
        android:id="@+id/subName"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="@drawable/border"
        android:ems="10"
        android:hint="Platform Name"
        android:inputType="text"
        android:padding="20px"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:translationY="220sp" />

    <EditText
        android:id="@+id/dueDate"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="@drawable/border"
        android:ems="10"
        android:hint="Enter Due Date"
        android:inputType="text"
        android:padding="20px"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:translationY="235sp" />

    <EditText
        android:id="@+id/cycle"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/border"
        android:ems="10"
        android:hint="Enter Cycle days"
        android:inputType="text"
        android:padding="20px"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:translationY="250sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="955dp"
        android:layout_height="183dp"
        android:translationX="-340sp"
        android:translationY="-250sp"
        app:srcCompat="@drawable/add_a_subheading" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Subsctiption details"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:translationY="-300sp" />

</LinearLayout>